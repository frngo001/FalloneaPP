<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd" bootstrap="vendor/autoload.php">
    <listeners>
        <listener class="PHPUnit\TextUI\ResultPrinter" file="vendor/phpunit/phpunit/src/TextUI/ResultPrinter.php">
            <arguments>
                <array>
                    <element>
                        <object class="PHPUnit\Util\Log\TeamCity" file="vendor/phpunit/phpunit/src/Util/Log/TeamCity.php" />
                    </element>
                </array>
            </arguments>
        </listener>
    </listeners>

    <php>
        <ini name="display_errors" value="On" />
    </php>

    <testsuites>
        <testsuite name="My Test Suite">
            <directory>PHP-Test</directory>
        </testsuite>
    </testsuites>

    <listeners>
        <listener class="PHPUnit\TextUI\ResultPrinter" file="vendor/phpunit/phpunit/src/TextUI/ResultPrinter.php">
            <arguments>
                <array>
                    <element>
                        <object class="PHPUnit\TextUI\DefaultResultPrinter" />
                    </element>
                </array>
            </arguments>
        </listener>
    </listeners>
    
    <logging>
        <log type="testdox-text" target="php://stdout" show-diff="true" />
    </logging>
</phpunit>
